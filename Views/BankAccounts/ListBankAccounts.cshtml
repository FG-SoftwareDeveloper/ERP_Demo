@{
    Layout = "_Layout";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ListBankAccounts</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body[data-theme="dark"] {
            background-color: #181a1b;
            color: #e0e0e0;
        }

        .card[data-theme="dark"] {
            background-color: #23272b;
            color: #e0e0e0;
        }

        .theme-toggle {
            cursor: pointer;
        }

        .ai-forecast {
            background: linear-gradient(90deg, #6a11cb 0%, #2575fc 100%);
            color: #fff;
        }

        .bi-widget {
            min-width: 180px;
        }
    </style>
    <script>
        function toggleTheme() {
            const body = document.body;
            const current = body.getAttribute('data-theme');
            body.setAttribute('data-theme', current === 'dark' ? 'light' : 'dark');
            document.querySelectorAll('.card').forEach(card => {
                card.setAttribute('data-theme', body.getAttribute('data-theme'));
            });
        }
    </script>
</head>
<body data-theme="light">
    <div class="container-fluid py-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>Bank Accounts Overview</h2>
            <button class="btn btn-outline-secondary theme-toggle" onclick="toggleTheme()">
                Toggle Light/Dark
            </button>
        </div>

        <!-- BI Widgets Row -->
        <div class="row mb-4">
            <div class="col-md-3 bi-widget">
                <div class="card text-center shadow-sm" data-theme="light">
                    <div class="card-body">
                        <h5 class="card-title">Total Accounts</h5>
                        <p class="display-6 fw-bold">24</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3 bi-widget">
                <div class="card text-center shadow-sm" data-theme="light">
                    <div class="card-body">
                        <h5 class="card-title">Aggregate Balance</h5>
                        <p class="display-6 fw-bold">$2,450,000</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3 bi-widget">
                <div class="card text-center shadow-sm" data-theme="light">
                    <div class="card-body">
                        <h5 class="card-title">Active Accounts</h5>
                        <p class="display-6 fw-bold">21</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3 bi-widget">
                <div class="card text-center shadow-sm" data-theme="light">
                    <div class="card-body">
                        <h5 class="card-title">Dormant Accounts</h5>
                        <p class="display-6 fw-bold">3</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- AI Forecasting Widget -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card ai-forecast shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">
                            <i class="bi bi-graph-up-arrow"></i> AI Forecast: Next Quarter Cash Flow
                        </h5>
                        <p class="mb-1">Projected: <span class="fw-bold">$2,700,000</span></p>
                        <small>Based on historical trends and current account activity.</small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Bank Accounts Table -->
        <div class="card shadow-sm mb-4" data-theme="light">
            <div class="card-header">
                <h5 class="mb-0">Bank Accounts List</h5>
            </div>
            <div class="card-body p-0">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Account Name</th>
                            <th>Bank</th>
                            <th>Type</th>
                            <th>Status</th>
                            <th>Balance</th>
                            <th>Last Activity</th>
                            <th>AI Insights</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Operating Account</td>
                            <td>Wells Fargo</td>
                            <td>Checking</td>
                            <td><span class="badge bg-success">Active</span></td>
                            <td>$1,200,000</td>
                            <td>2025-08-28</td>
                            <td>
                                <span class="text-success">Stable</span>
                            </td>
                        </tr>
                        <tr>
                            <td>Payroll Account</td>
                            <td>Chase</td>
                            <td>Checking</td>
                            <td><span class="badge bg-success">Active</span></td>
                            <td>$800,000</td>
                            <td>2025-08-30</td>
                            <td>
                                <span class="text-warning">High Outflow</span>
                            </td>
                        </tr>
                        <tr>
                            <td>Reserve Account</td>
                            <td>Bank of America</td>
                            <td>Savings</td>
                            <td><span class="badge bg-secondary">Dormant</span></td>
                            <td>$450,000</td>
                            <td>2025-07-15</td>
                            <td>
                                <span class="text-muted">Low Activity</span>
                            </td>
                        </tr>
                        <!-- Add more rows as needed -->
                    </tbody>
                </table>
            </div>
        </div>

        <!-- BI Chart Placeholder -->
        <div class="card shadow-sm mb-4" data-theme="light">
            <div class="card-header">
                <h5 class="mb-0">Balance Trend (BI Chart)</h5>
            </div>
            <div class="card-body">
                <div class="text-center">
                    <img src="https://via.placeholder.com/600x200?text=Balance+Trend+Chart" alt="Balance Trend Chart" class="img-fluid rounded" />
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.js"></script>
</body>
</html>