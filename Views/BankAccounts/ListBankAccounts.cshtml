@section Scripts {
    <script>
        (function () {
          const qEl       = document.getElementById('qBank');
          const bankEl    = document.getElementById('bankFilter');
          const typeEl    = document.getElementById('typeFilter');
          const statusEl  = document.getElementById('statusFilter');
          const tbody     = document.getElementById('bankTbody');

          function apply() {
            const q   = (qEl.value || '').toLowerCase();
            const bk  = bankEl.value;
            const tp  = typeEl.value;
            const st  = statusEl.value;

            tbody.querySelectorAll('tr').forEach(tr => {
              const hay   = (tr.cells[1].innerText + ' ' + tr.cells[4].innerText + ' ' + tr.cells[2].innerText).toLowerCase();
              const bank  = tr.dataset.bank || '';
              const type  = tr.dataset.type || '';
              const stat  = tr.dataset.status || '';
              let keep = hay.includes(q);
              if (bk && bank !== bk) keep = false;
              if (tp && type !== tp) keep = false;
              if (st && stat !== st) keep = false;
              tr.style.display = keep ? '' : 'none';
            });
          }

          const btnApply = document.getElementById('btnApplyBank');
          const btnClear = document.getElementById('btnClearBank');
          if (btnApply) btnApply.addEventListener('click', apply);
          if (btnClear) btnClear.addEventListener('click', () => {
            qEl.value = ''; bankEl.value = ''; typeEl.value = ''; statusEl.value = ''; apply();
          });

          // Quick filter buttons
          const btnAll = document.getElementById('btnFilterAll');
          const btnActive = document.getElementById('btnFilterActive');
          const btnOver = document.getElementById('btnFilterOverdrawn');
          function setActive(btn) {
            [btnAll, btnActive, btnOver].forEach(b => b && b.classList.remove('active'));
            btn.classList.add('active');
          }
          if (btnAll) btnAll.addEventListener('click', () => {
            setActive(btnAll);
            tbody.querySelectorAll('tr').forEach(tr => tr.style.display = '');
          });
          if (btnActive) btnActive.addEventListener('click', () => {
            setActive(btnActive);
            tbody.querySelectorAll('tr').forEach(tr => {
              tr.style.display = (tr.dataset.status === 'Active') ? '' : 'none';
            });
          });
          if (btnOver) btnOver.addEventListener('click', () => {
            setActive(btnOver);
            tbody.querySelectorAll('tr').forEach(tr => {
              tr.style.display = (tr.dataset.overdrawn === 'true') ? '' : 'none';
            });
          });

          // Select All
          const selectAll = document.getElementById('selectAllBank');
          if (selectAll) {
            selectAll.addEventListener('change', () => {
              document.querySelectorAll('#bankTbody input[type="checkbox"]').forEach(cb => cb.checked = selectAll.checked);
            });
          }
        })();
    </script>
