    <script>
        (function () {
          const qEl   = document.getElementById('qCompanies');
          const indEl = document.getElementById('industryCompanies');
          const stEl  = document.getElementById('statusCompanies');
          const regEl = document.getElementById('regionCompanies');
          const sizeEl= document.getElementById('sizeCompanies');
          const tbody = document.getElementById('companiesTbody');

          function matchesSize(sizeFilter, employees) {
            if (!sizeFilter) return true;
            const n = Number(employees) || 0;
            switch (sizeFilter) {
              case '1-50': return n >= 1 && n <= 50;
              case '51-250': return n >= 51 && n <= 250;
              case '251-1000': return n >= 251 && n <= 1000;
              case '1000+': return n >= 1000;
              default: return true;
            }
          }

          function apply() {
            const q   = (qEl.value || '').toLowerCase();
            const ind = indEl.value;
            const st  = stEl.value;
            const reg = regEl.value;
            const size= sizeEl.value;

            tbody.querySelectorAll('tr').forEach(tr => {
              const cells = tr.cells;
              const hay = (cells[1].innerText + ' ' + cells[2].innerText + ' ' + cells[7].innerText).toLowerCase(); // name + domain + owner
              const industry = tr.dataset.industry || '';
              const status   = tr.dataset.status || '';
              const region   = tr.dataset.region || '';
              const employees= cells[4].innerText.replace(/[^0-9]/g,'') || '0';

              let keep = hay.includes(q);
              if (ind && industry !== ind) keep = false;
              if (st && status !== st) keep = false;
              if (reg && region !== reg) keep = false;
              if (!matchesSize(size, employees)) keep = false;

              tr.style.display = keep ? '' : 'none';
            });
          }

          const btnApply = document.getElementById('btnApplyCompanies');
          const btnClear = document.getElementById('btnClearCompanies');
          if (btnApply) btnApply.addEventListener('click', apply);
          if (btnClear) btnClear.addEventListener('click', () => {
            qEl.value = ''; indEl.value = ''; stEl.value = ''; regEl.value = ''; sizeEl.value = ''; apply();
          });

          // Quick filter buttons
          const bAll = document.getElementById('btnCompaniesAll');
          const bAct = document.getElementById('btnCompaniesActive');
          const bPros= document.getElementById('btnCompaniesProspect');
          const bChrn= document.getElementById('btnCompaniesChurn');
          function setActive(btn){ [bAll,bAct,bPros,bChrn].forEach(x=>x&&x.classList.remove('active')); btn.classList.add('active'); }
          if (bAll)  bAll.addEventListener('click', ()=>{ setActive(bAll);  tbody.querySelectorAll('tr').forEach(tr=> tr.style.display=''); });
          if (bAct)  bAct.addEventListener('click', ()=>{ setActive(bAct);  tbody.querySelectorAll('tr').forEach(tr=> tr.style.display = (tr.dataset.status==='Active')?'':'' ); });
          if (bPros) bPros.addEventListener('click',()=>{ setActive(bPros); tbody.querySelectorAll('tr').forEach(tr=> tr.style.display = (tr.dataset.status==='Prospect')?'':'' ); });
          if (bChrn) bChrn.addEventListener('click',()=>{ setActive(bChrn); tbody.querySelectorAll('tr').forEach(tr=> tr.style.display = (tr.dataset.status==='Churned' || tr.dataset.status==='On Hold')?'':'' ); });

          // Select All
          const selectAll = document.getElementById('selectAllCompanies');
          if (selectAll) {
            selectAll.addEventListener('change', () => {
              document.querySelectorAll('#companiesTbody input[type="checkbox"]').forEach(cb => cb.checked = selectAll.checked);
            });
          }
        })();
    </script>
