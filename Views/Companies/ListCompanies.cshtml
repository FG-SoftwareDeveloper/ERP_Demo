@{
    Layout = "_Layout";
    // Example data for static design; replace with your model in production
    var companies = new[] {
        new { CompanyID = 1, Name = "Acme Construction", Industry = "Construction", Status = "Active", Revenue = 2500000m, Employees = 120, LastActivity = DateTime.Parse("2025-08-28") },
        new { CompanyID = 2, Name = "Global Paper", Industry = "Manufacturing", Status = "Inactive", Revenue = 1200000m, Employees = 80, LastActivity = DateTime.Parse("2025-07-15") },
        new { CompanyID = 3, Name = "TechSource", Industry = "IT Services", Status = "Active", Revenue = 3200000m, Employees = 200, LastActivity = DateTime.Parse("2025-08-30") }
    };
}

<h2 class="h1 fw-bold themed-heading mb-4 border-bottom pb-2">Companies</h2>

<!-- KPI Cards Row -->
<div class="row g-4 mb-4">
    <div class="col-md-4">
        <div class="card shadow-sm border-0 h-100">
            <div class="card-body">
                <div class="d-flex align-items-center mb-2">
                    <span class="me-2 fs-3 text-primary"><i class="bi bi-building"></i></span>
                    <h5 class="card-title mb-0">Total Companies</h5>
                </div>
                <div class="display-5 fw-bold text-primary mb-1">@companies.Length</div>
                <div class="text-muted">Active: @companies.Count(c => c.Status == "Active"), Inactive: @companies.Count(c => c.Status == "Inactive")</div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card shadow-sm border-0 h-100">
            <div class="card-body">
                <div class="d-flex align-items-center mb-2">
                    <span class="me-2 fs-3 text-success"><i class="bi bi-currency-dollar"></i></span>
                    <h5 class="card-title mb-0">Total Revenue</h5>
                </div>
                <div class="display-5 fw-bold text-success mb-1">@companies.Sum(c => c.Revenue).ToString("C")</div>
                <div class="text-muted">Top Industry: @companies.GroupBy(c => c.Industry).OrderByDescending(g => g.Sum(c => c.Revenue)).First().Key</div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card shadow-sm border-0 h-100">
            <div class="card-body">
                <div class="d-flex align-items-center mb-2">
                    <span class="me-2 fs-3 text-info"><i class="bi bi-people"></i></span>
                    <h5 class="card-title mb-0">Total Employees</h5>
                </div>
                <div class="display-5 fw-bold text-info mb-1">@companies.Sum(c => c.Employees)</div>
                <div class="text-muted">Avg. per Company: @(companies.Sum(c => c.Employees) / companies.Length)</div>
            </div>
        </div>
    </div>
</div>

<!-- AI Forecast Widget (High Contrast) -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card shadow-lg border-0" style="background: linear-gradient(90deg,#e3e6f0 0%,#f8fafc 100%);">
            <div class="card-body p-4">
                <div class="d-flex flex-column flex-md-row align-items-md-center justify-content-between">
                    <div>
                        <h5 class="mb-2 text-dark"><i class="bi bi-graph-up-arrow me-2"></i>AI Forecast: Next Quarter Revenue Growth</h5>
                        <div class="fs-2 fw-bold text-dark">+12.5%</div>
                        <div class="small text-dark">Based on historical company performance and predictive analytics.</div>
                    </div>
                    <div class="mt-3 mt-md-0">
                        <span class="badge rounded-pill bg-primary bg-opacity-10 text-primary fs-6 px-4 py-2 shadow-sm">Projected Total Revenue: $7,000,000</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- BI Chart Placeholder -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-white">
                <h5 class="mb-0">Company Revenue Trend (BI Chart)</h5>
            </div>
            <div class="card-body text-center">
                <img src="https://via.placeholder.com/600x200?text=Company+Revenue+Trend+Chart" alt="Company Revenue Trend Chart" class="img-fluid rounded" />
            </div>
        </div>
    </div>
</div>

<!-- Companies Table -->
<div class="row">
    <div class="col-12">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-white">
                <h5 class="mb-0">Companies List</h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>#</th>
                                <th>Name</th>
                                <th>Industry</th>
                                <th>Status</th>
                                <th>Revenue</th>
                                <th>Employees</th>
                                <th>Last Activity</th>
                                <th>AI Insights</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var c in companies)
                            {
                                <tr>
                                    <td>@c.CompanyID</td>
                                    <td class="fw-semibold">@c.Name</td>
                                    <td>@c.Industry</td>
                                    <td>
                                        @if (c.Status == "Active")
                                        {
                                            <span class="badge bg-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Inactive</span>
                                        }
                                    </td>
                                    <td>@c.Revenue.ToString("C")</td>
                                    <td>@c.Employees</td>
                                    <td>@c.LastActivity.ToString("yyyy-MM-dd")</td>
                                    <td>
                                        @if (c.Status == "Inactive")
                                        {
                                            <span class="text-danger">Low Engagement</span>
                                        }
                                        else if (c.Revenue > 3000000)
                                        {
                                            <span class="text-success">High Growth</span>
                                        }
                                        else
                                        {
                                            <span class="text-warning">Stable</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>