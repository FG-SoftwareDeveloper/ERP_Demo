@{
    Layout = "_Layout";
    // Example data for static design; replace with your model in production
    var departments = new[] {
        new { DepartmentID = 1, Name = "Finance", Manager = "Alice Smith", Status = "Active", Budget = 1200000m, Employees = 18, LastActivity = DateTime.Parse("2025-08-28"), PerformanceScore = 92 },
        new { DepartmentID = 2, Name = "Operations", Manager = "Bob Lee", Status = "Active", Budget = 950000m, Employees = 25, LastActivity = DateTime.Parse("2025-08-30"), PerformanceScore = 85 },
        new { DepartmentID = 3, Name = "HR", Manager = "Carol Jones", Status = "Inactive", Budget = 400000m, Employees = 8, LastActivity = DateTime.Parse("2025-07-15"), PerformanceScore = 60 }
    };
}

<h2 class="h1 fw-bold themed-heading mb-4 border-bottom pb-2">Departments</h2>

<!-- KPI Cards Row -->
<div class="row g-4 mb-4">
    <div class="col-md-4">
        <div class="card shadow-sm border-0 h-100">
            <div class="card-body">
                <div class="d-flex align-items-center mb-2">
                    <span class="me-2 fs-3 text-primary"><i class="bi bi-diagram-3"></i></span>
                    <h5 class="card-title mb-0">Total Departments</h5>
                </div>
                <div class="display-5 fw-bold text-primary mb-1">@departments.Length</div>
                <div class="text-muted">Active: @departments.Count(d => d.Status == "Active"), Inactive: @departments.Count(d => d.Status == "Inactive")</div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card shadow-sm border-0 h-100">
            <div class="card-body">
                <div class="d-flex align-items-center mb-2">
                    <span class="me-2 fs-3 text-success"><i class="bi bi-currency-dollar"></i></span>
                    <h5 class="card-title mb-0">Total Budget</h5>
                </div>
                <div class="display-5 fw-bold text-success mb-1">@departments.Sum(d => d.Budget).ToString("C")</div>
                <div class="text-muted">Avg. per Dept: @(departments.Sum(d => d.Budget) / departments.Length).ToString("C")</div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card shadow-sm border-0 h-100">
            <div class="card-body">
                <div class="d-flex align-items-center mb-2">
                    <span class="me-2 fs-3 text-info"><i class="bi bi-people"></i></span>
                    <h5 class="card-title mb-0">Total Employees</h5>
                </div>
                <div class="display-5 fw-bold text-info mb-1">@departments.Sum(d => d.Employees)</div>
                <div class="text-muted">Avg. per Dept: @(departments.Sum(d => d.Employees) / departments.Length)</div>
            </div>
        </div>
    </div>
</div>

<!-- AI Forecast Widget (High Contrast) -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card shadow-lg border-0" style="background: linear-gradient(90deg,#e3e6f0 0%,#f8fafc 100%);">
            <div class="card-body p-4">
                <div class="d-flex flex-column flex-md-row align-items-md-center justify-content-between">
                    <div>
                        <h5 class="mb-2 text-dark"><i class="bi bi-graph-up-arrow me-2"></i>AI Forecast: Next Quarter Department Performance</h5>
                        <div class="fs-2 fw-bold text-dark">+9.2%</div>
                        <div class="small text-dark">Based on historical department metrics and predictive analytics.</div>
                    </div>
                    <div class="mt-3 mt-md-0">
                        <span class="badge rounded-pill bg-primary bg-opacity-10 text-primary fs-6 px-4 py-2 shadow-sm">Projected Avg. Score: 88</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- BI Chart Placeholder -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-white">
                <h5 class="mb-0">Department Performance Trend (BI Chart)</h5>
            </div>
            <div class="card-body text-center">
                <img src="https://via.placeholder.com/600x200?text=Department+Performance+Trend+Chart" alt="Department Performance Trend Chart" class="img-fluid rounded" />
            </div>
        </div>
    </div>
</div>

<!-- Departments Table -->
<div class="row">
    <div class="col-12">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-white">
                <h5 class="mb-0">Departments List</h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>#</th>
                                <th>Name</th>
                                <th>Manager</th>
                                <th>Status</th>
                                <th>Budget</th>
                                <th>Employees</th>
                                <th>Last Activity</th>
                                <th>Performance Score</th>
                                <th>AI Insights</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var d in departments)
                            {
                                <tr>
                                    <td>@d.DepartmentID</td>
                                    <td class="fw-semibold">@d.Name</td>
                                    <td>@d.Manager</td>
                                    <td>
                                        @if (d.Status == "Active")
                                        {
                                            <span class="badge bg-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Inactive</span>
                                        }
                                    </td>
                                    <td>@d.Budget.ToString("C")</td>
                                    <td>@d.Employees</td>
                                    <td>@d.LastActivity.ToString("yyyy-MM-dd")</td>
                                    <td>@d.PerformanceScore</td>
                                    <td>
                                        @if (d.Status == "Inactive")
                                        {
                                            <span class="text-danger">Needs Attention</span>
                                        }
                                        else if (d.PerformanceScore > 90)
                                        {
                                            <span class="text-success">Outstanding</span>
                                        }
                                        else if (d.PerformanceScore < 70)
                                        {
                                            <span class="text-warning">Below Target</span>
                                        }
                                        else
                                        {
                                            <span class="text-primary">On Track</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>