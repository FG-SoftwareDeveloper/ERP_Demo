    <script>
        (function () {
          const qEl   = document.getElementById('qDept');
          const stEl  = document.getElementById('statusDept');
          const locEl = document.getElementById('locDept');
          const typeEl= document.getElementById('typeDept');
          const sizeEl= document.getElementById('sizeDept');
          const utilEl= document.getElementById('utilDept');
          const tbody = document.getElementById('deptTbody');

          function matchSize(filter, n) {
            n = Number(n) || 0;
            switch (filter) {
              case '1-25': return n >= 1 && n <= 25;
              case '26-100': return n >= 26 && n <= 100;
              case '101-300': return n >= 101 && n <= 300;
              case '300+': return n >= 300;
              default: return true;
            }
          }

          function matchUtil(filter, n) {
            n = Number(n) || 0;
            switch (filter) {
              case '<60': return n < 60;
              case '60-80': return n >= 60 && n < 80;
              case '80-100': return n >= 80 && n <= 100;
              case '100+': return n > 100;
              default: return true;
            }
          }

          function apply() {
            const q   = (qEl.value || '').toLowerCase();
            const st  = stEl.value;
            const loc = locEl.value;
            const typ = typeEl.value;
            const size= sizeEl.value;
            const util= utilEl.value;

            tbody.querySelectorAll('tr').forEach(tr => {
              const cells = tr.cells;
              const hay = (cells[1].innerText + ' ' + cells[2].innerText + ' ' + cells[8].innerText + ' ' + cells[9].innerText).toLowerCase();
              const status = tr.dataset.status || '';
              const location = tr.dataset.location || '';
              const dType = tr.dataset.type || '';
              const headcount = tr.dataset.headcount || '0';
              const utilPct = tr.dataset.util || '0';

              let keep = hay.includes(q);
              if (st  && status   !== st)   keep = false;
              if (loc && location !== loc)  keep = false;
              if (typ && dType    !== typ)  keep = false;
              if (!matchSize(size, headcount)) keep = false;
              if (!matchUtil(util, utilPct))   keep = false;

              tr.style.display = keep ? '' : 'none';
            });
          }

          // Buttons
          const btnApply = document.getElementById('btnApplyDept');
          const btnClear = document.getElementById('btnClearDept');
          if (btnApply) btnApply.addEventListener('click', apply);
          if (btnClear) btnClear.addEventListener('click', () => {
            qEl.value=''; stEl.value=''; locEl.value=''; typeEl.value=''; sizeEl.value=''; utilEl.value=''; apply();
          });
          if (qEl) qEl.addEventListener('keydown', e => { if (e.key === 'Enter') { e.preventDefault(); apply(); } });

          // Quick filters
          const bAll = document.getElementById('btnDeptAll');
          const bHire= document.getElementById('btnDeptHiring');
          const bUnder=document.getElementById('btnDeptUnder');
          const bOver= document.getElementById('btnDeptOver');
          function setActive(btn){ [bAll,bHire,bUnder,bOver].forEach(x=>x&&x.classList.remove('active')); btn.classList.add('active'); }
          if (bAll)  bAll.addEventListener('click', ()=>{ setActive(bAll);  tbody.querySelectorAll('tr').forEach(tr=> tr.style.display=''); });
          if (bHire) bHire.addEventListener('click',()=>{ setActive(bHire); tbody.querySelectorAll('tr').forEach(tr=> tr.style.display = (Number(tr.dataset.openroles||0) > 0)?'':'' ); });
          if (bUnder)bUnder.addEventListener('click',()=>{ setActive(bUnder);tbody.querySelectorAll('tr').forEach(tr=> tr.style.display = (Number(tr.dataset.util||0) < 60)?'':'' ); });
          if (bOver) bOver.addEventListener('click', ()=>{ setActive(bOver); tbody.querySelectorAll('tr').forEach(tr=> tr.style.display = (Number(tr.dataset.util||0) > 100)?'':'' ); });

          // Select All
          const selectAll = document.getElementById('selectAllDept');
          if (selectAll) {
            selectAll.addEventListener('change', () => {
              document.querySelectorAll('#deptTbody input[type="checkbox"]').forEach(cb => cb.checked = selectAll.checked);
            });
          }
        })();
    </script>
