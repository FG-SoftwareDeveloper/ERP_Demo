@model IEnumerable<ERP_Demo.Models.APInvoice>

@{
    Layout = "_Layout";
}

<h2 class="h1 fw-bold themed-heading mb-4 border-bottom pb-2">AP Invoices</h2>

<!-- KPI Cards Row -->
<div class="row g-4 mb-4">
    <div class="col-md-4">
        <div class="card shadow-sm border-0 h-100">
            <div class="card-body">
                <div class="d-flex align-items-center mb-2">
                    <span class="me-2 fs-3 text-primary"><i class="bi bi-file-earmark-spreadsheet"></i></span>
                    <h5 class="card-title mb-0">Total Invoices</h5>
                </div>
                <div class="display-5 fw-bold text-primary mb-1">@Model.Count()</div>
                <div class="text-muted">Open: @Model.Count(i => i.Status == "Open"), Paid: @Model.Count(i => i.Status == "Paid")</div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card shadow-sm border-0 h-100">
            <div class="card-body">
                <div class="d-flex align-items-center mb-2">
                    <span class="me-2 fs-3 text-danger"><i class="bi bi-currency-dollar"></i></span>
                    <h5 class="card-title mb-0">Total Amount</h5>
                </div>
                <div class="display-5 fw-bold text-danger mb-1">@Model.Sum(i => i.Amount).ToString("C")</div>
                <div class="text-muted">Overdue: @Model.Where(i => i.Status == "Overdue").Sum(i => i.Amount).ToString("C")</div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card shadow-sm border-0 h-100">
            <div class="card-body">
                <div class="d-flex align-items-center mb-2">
                    <span class="me-2 fs-3 text-success"><i class="bi bi-clock-history"></i></span>
                    <h5 class="card-title mb-0">Avg. Payment Days</h5>
                </div>
                <div class="display-5 fw-bold text-success mb-1">22</div>
                <div class="text-muted">Last Month: 20</div>
            </div>
        </div>
    </div>
</div>

<!-- AI Forecast Widget (High Contrast) -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card shadow-lg border-0" style="background: linear-gradient(90deg,#e3e6f0 0%,#f8fafc 100%);">
            <div class="card-body p-4">
                <div class="d-flex flex-column flex-md-row align-items-md-center justify-content-between">
                    <div>
                        <h5 class="mb-2 text-dark"><i class="bi bi-graph-up-arrow me-2"></i>AI Forecast: Next Month AP Outflow</h5>
                        <div class="fs-2 fw-bold text-dark">$135,000</div>
                        <div class="small text-dark">Based on historical invoice patterns and payment trends.</div>
                    </div>
                    <div class="mt-3 mt-md-0">
                        <span class="badge rounded-pill bg-primary bg-opacity-10 text-primary fs-6 px-4 py-2 shadow-sm">Expected Overdue: $12,000</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- BI Chart Placeholder -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-white">
                <h5 class="mb-0">AP Invoice Trend (BI Chart)</h5>
            </div>
            <div class="card-body text-center">
                <img src="https://via.placeholder.com/600x200?text=AP+Invoice+Trend+Chart" alt="AP Invoice Trend Chart" class="img-fluid rounded" />
            </div>
        </div>
    </div>
</div>

<!-- AP Invoices Table -->
<div class="row">
    <div class="col-12">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-white">
                <h5 class="mb-0">AP Invoices List</h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>#</th>
                                <th>Vendor</th>
                                <th>Invoice #</th>
                                <th>Date</th>
                                <th class="text-end">Amount</th>
                                <th>Status</th>
                                <th>AI Insights</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var i in Model)
                            {
                                <tr>
                                    <td>@i.APInvoiceID</td>
                                    <td class="fw-semibold">@i.Vendor</td>
                                    <td>@i.InvoiceDate.ToString("yyyy-MM-dd")</td>
                                    <td class="text-end">@i.Amount.ToString("C")</td>
                                    <td>
                                        @switch (i.Status)
                                        {
                                            case "Paid":
                                                <span class="badge bg-success">Paid</span>
                                                ; break;
                                            case "Overdue":
                                                <span class="badge bg-danger">Overdue</span>
                                                ; break;
                                            default:
                                                <span class="badge bg-warning text-dark">Open</span>
                                                ; break;
                                        }
                                    </td>
                                    <td>
                                        @if (i.Status == "Overdue")
                                        {
                                            <span class="text-danger">Escalate Payment</span>
                                        }
                                        else if (i.Status == "Paid")
                                        {
                                            <span class="text-success">On Time</span>
                                        }
                                        else
                                        {
                                            <span class="text-warning">Likely Overdue</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>