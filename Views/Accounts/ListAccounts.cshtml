@{
    Layout = "_Layout";
}

<div class="container-fluid py-4">
    <!-- KPI Cards Row -->
    <div class="row g-4 mb-4">
        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-2">
                        <span class="me-2 fs-3 text-primary"><i class="bi bi-collection"></i></span>
                        <h5 class="card-title mb-0">Total Accounts</h5>
                    </div>
                    <div class="display-5 fw-bold text-primary mb-1">120</div>
                    <div class="text-muted">Active: 110, Inactive: 10</div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-2">
                        <span class="me-2 fs-3 text-success"><i class="bi bi-piggy-bank"></i></span>
                        <h5 class="card-title mb-0">Total Asset Accounts</h5>
                    </div>
                    <div class="display-5 fw-bold text-success mb-1">60</div>
                    <div class="text-muted">Current Assets: 30</div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-2">
                        <span class="me-2 fs-3 text-danger"><i class="bi bi-exclamation-circle"></i></span>
                        <h5 class="card-title mb-0">Total Liability Accounts</h5>
                    </div>
                    <div class="display-5 fw-bold text-danger mb-1">30</div>
                    <div class="text-muted">Long-term Liabilities: 15</div>
                </div>
            </div>
        </div>
    </div>

    <!-- AI Forecast Widget (Improved Contrast) -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-lg border-0" style="background: linear-gradient(90deg,#e3e6f0 0%,#f8fafc 100%);">
                <div class="card-body p-4">
                    <div class="d-flex flex-column flex-md-row align-items-md-center justify-content-between">
                        <div>
                            <h5 class="mb-2 text-dark"><i class="bi bi-graph-up-arrow me-2"></i>AI Forecast: Next Quarter Account Growth</h5>
                            <div class="fs-2 fw-bold text-dark">+8.5%</div>
                            <div class="small text-dark">Based on historical trends and predictive analytics.</div>
                        </div>
                        <div class="mt-3 mt-md-0">
                            <span class="badge rounded-pill bg-primary bg-opacity-10 text-primary fs-6 px-4 py-2 shadow-sm">Projected Total: 130 Accounts</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- BI Chart Placeholder -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white">
                    <h5 class="mb-0">Account Activity Trend (BI Chart)</h5>
                </div>
                <div class="card-body text-center">
                    <img src="https://via.placeholder.com/600x200?text=Account+Activity+Trend+Chart" alt="Account Activity Trend Chart" class="img-fluid rounded" />
                </div>
            </div>
        </div>
    </div>

    <!-- Accounts Table -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white">
                    <h5 class="mb-0">Accounts List</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Account Name</th>
                                    <th>Type</th>
                                    <th>Status</th>
                                    <th>Balance</th>
                                    <th>Last Activity</th>
                                    <th>AI Insights</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Operating Account</td>
                                    <td>Asset</td>
                                    <td><span class="badge bg-success">Active</span></td>
                                    <td>$1,200,000</td>
                                    <td>2025-08-28</td>
                                    <td><span class="text-success">Stable Growth</span></td>
                                </tr>
                                <tr>
                                    <td>Payroll Account</td>
                                    <td>Liability</td>
                                    <td><span class="badge bg-secondary">Inactive</span></td>
                                    <td>$800,000</td>
                                    <td>2025-08-30</td>
                                    <td><span class="text-warning">High Outflow</span></td>
                                </tr>
                                <tr>
                                    <td>Reserve Account</td>
                                    <td>Asset</td>
                                    <td><span class="badge bg-success">Active</span></td>
                                    <td>$450,000</td>
                                    <td>2025-07-15</td>
                                    <td><span class="text-primary">Low Risk</span></td>
                                </tr>
                                <!-- Add more rows as needed -->
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>