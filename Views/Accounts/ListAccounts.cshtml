@section Scripts {
    <script>
        // Simple client-side filters (matches your AP page pattern)
        (function () {
          const qEl = document.getElementById('qAccounts');
          const statusEl = document.getElementById('statusAccounts');
          const balanceEl = document.getElementById('balanceAccounts');
          const segmentEl = document.getElementById('segmentAccounts');
          const tbody = document.getElementById('accountsTbody');

          function apply() {
            const q = (qEl.value || '').toLowerCase();
            const st = statusEl.value;
            const balFilter = balanceEl.value;
            const seg = segmentEl.value;

            tbody.querySelectorAll('tr').forEach(tr => {
              const hay = tr.cells[1].innerText + ' ' + tr.cells[2].innerText; // Account + Email
              const status = tr.dataset.status || '';
              const bal = parseFloat(tr.dataset.balance || '0');
              const segment = tr.dataset.segment || '';

              let keep = hay.toLowerCase().includes(q);
              if (st && status !== st) keep = false;
              if (seg && segment !== seg) keep = false;
              if (balFilter === '>0' && !(bal > 0)) keep = false;
              if (balFilter === '=0' && !(bal === 0)) keep = false;
              if (balFilter === '<0' && !(bal < 0)) keep = false;

              tr.style.display = keep ? '' : 'none';
            });
          }

          const btnApply = document.getElementById('btnApplyAccounts');
          const btnClear = document.getElementById('btnClearAccounts');
          if (btnApply) btnApply.addEventListener('click', apply);
          if (btnClear) btnClear.addEventListener('click', () => {
            qEl.value = ''; statusEl.value = ''; balanceEl.value = ''; segmentEl.value = ''; apply();
          });

          // Select All
          const selectAll = document.getElementById('selectAllAccounts');
          if (selectAll) {
            selectAll.addEventListener('change', () => {
              document.querySelectorAll('#accountsTbody input[type="checkbox"]').forEach(cb => cb.checked = selectAll.checked);
            });
          }
        })();
    </script>
}

