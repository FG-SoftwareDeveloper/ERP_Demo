@section Scripts {
    <script>
        (function () {
          const $  = (s, r=document) => r.querySelector(s);
          const $$ = (s, r=document) => Array.from(r.querySelectorAll(s));
          const modal = id => bootstrap.Modal.getOrCreateInstance(document.getElementById(id));

          // ---------- Filters ----------
          const qEl   = $('#qEmp');
          const stEl  = $('#statusEmp');
          const typEl = $('#typeEmp');
          const depEl = $('#deptEmp');
          const locEl = $('#locEmp');
          const utlEl = $('#utilEmp');
          const tbody = $('#empTbody');

          function matchUtil(filter, n) {
            n = Number(n) || 0;
            switch (filter) {
              case '<60':   return n < 60;
              case '60-90': return n >= 60 && n < 90;
              case '90+':   return n >= 90;
              default:      return true;
            }
          }

          function applyEmpFilters() {
            const q   = (qEl?.value || '').toLowerCase();
            const st  = stEl?.value || '';
            const typ = typEl?.value || '';
            const dep = depEl?.value || '';
            const loc = locEl?.value || '';
            const utl = utlEl?.value || '';

            $$('#empTbody tr').forEach(tr => {
              const hay = tr.innerText.toLowerCase();
              const keep = (!q   || hay.includes(q))
                        && (!st  || (tr.dataset.status   || '') === st)
                        && (!typ || (tr.dataset.type     || '') === typ)
                        && (!dep || (tr.dataset.dept     || '') === dep)
                        && (!loc || (tr.dataset.location || '') === loc)
                        && matchUtil(utl, tr.dataset.util || '0');
              tr.style.display = keep ? '' : 'none';
            });
          }

          $('#btnApplyEmp')?.addEventListener('click', applyEmpFilters);
          $('#btnClearEmp')?.addEventListener('click', () => {
            qEl.value=''; stEl.value=''; typEl.value=''; depEl.value=''; locEl.value=''; utlEl.value='';
            applyEmpFilters();
          });
          qEl?.addEventListener('keydown', e => { if (e.key === 'Enter') { e.preventDefault(); applyEmpFilters(); } });

          // Quick filter buttons
          const bAll = $('#btnEmpAll'), bAct = $('#btnEmpActive'), bLeave = $('#btnEmpLeave'), bCont = $('#btnEmpContractor');
          function setActive(btn){ [bAll,bAct,bLeave,bCont].forEach(x=>x&&x.classList.remove('active')); btn.classList.add('active'); }
          bAll?.addEventListener('click', ()=>{ setActive(bAll);   $$('#empTbody tr').forEach(tr=> tr.style.display=''); });
          bAct?.addEventListener('click', ()=>{ setActive(bAct);   $$('#empTbody tr').forEach(tr=> tr.style.display = (tr.dataset.status==='Active')?'':'' ); });
          bLeave?.addEventListener('click',()=>{ setActive(bLeave); $$('#empTbody tr').forEach(tr=> tr.style.display = (tr.dataset.status==='On Leave')?'':'' ); });
          bCont?.addEventListener('click', ()=>{ setActive(bCont); $$('#empTbody tr').forEach(tr=> tr.style.display = (tr.dataset.type==='Contractor')?'':'' ); });

          // Select All
          const selectAll = $('#selectAllEmp');
          selectAll?.addEventListener('change', () => {
            $$('#empTbody input[type="checkbox"]').forEach(cb => cb.checked = selectAll.checked);
          });

          // ---------- Quick View Modal ----------
          $$('.emp-view').forEach(btn => btn.addEventListener('click', () => {
            const tr = btn.closest('tr');
            if (!tr) return;
            const data = {
              name: btn.dataset.emp || tr.querySelector('td:nth-child(2) strong')?.textContent || '—',
              email: tr.querySelector('td:nth-child(2) .small')?.textContent || '—',
              role: tr.children[2]?.innerText || '—',
              dept: tr.children[3]?.innerText || '—',
              manager: tr.children[4]?.innerText || '—',
              location: tr.children[5]?.innerText || '—',
              start: tr.dataset.start || tr.children[6]?.innerText || '—',
              employment: tr.dataset.type || tr.children[7]?.innerText || '—',
              status: tr.dataset.status || tr.children[8]?.innerText || '—',
              util: tr.dataset.util || '0',
              pto: tr.dataset.pto || '0',
              band: tr.dataset.band || tr.children[11]?.innerText || '—',
            };
            $('#empQuickContent').innerHTML = `
              <div class="col-md-4">
                <div class="card hover-3d h-100">
                  <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                      <div class="avatar-lg bg-primary bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center me-3" style="width:64px;height:64px;">
                        <i class="bi bi-person fs-3 text-primary"></i>
                      </div>
                      <div>
                        <h5 class="mb-0 text-themed-primary">${data.name}</h5>
                        <div class="small text-themed-secondary">${data.email}</div>
                      </div>
                    </div>
                    <div class="d-grid gap-2">
                      <button class="btn btn-themed"><i class="bi bi-chat-dots me-2"></i>Message</button>
                      <button class="btn btn-outline-secondary focus-ring"><i class="bi bi-calendar3 me-2"></i>Schedule 1:1</button>
                    </div>
                  </div>
                </div>
              </div>
              <div class="col-md-8">
                <div class="card glass-effect h-100">
                  <div class="card-body">
                    <div class="row g-3">
                      <div class="col-sm-6"><div class="small text-themed-secondary">Role / Level</div><div class="fw-medium text-themed-primary">${data.role}</div></div>
                      <div class="col-sm-6"><div class="small text-themed-secondary">Department</div><div class="fw-medium text-themed-primary">${data.dept}</div></div>
                      <div class="col-sm-6"><div class="small text-themed-secondary">Manager</div><div class="fw-medium text-themed-primary">${data.manager}</div></div>
                      <div class="col-sm-6"><div class="small text-themed-secondary">Location</div><div class="fw-medium text-themed-primary">${data.location}</div></div>
                      <div class="col-sm-6"><div class="small text-themed-secondary">Start Date</div><div class="fw-medium text-themed-primary">${data.start}</div></div>
                      <div class="col-sm-6"><div class="small text-themed-secondary">Employment</div><div class="fw-medium text-themed-primary">${data.employment}</div></div>
                      <div class="col-sm-4"><div class="small text-themed-secondary">Status</div><div class="fw-medium text-themed-primary">${data.status}</div></div>
                      <div class="col-sm-4"><div class="small text-themed-secondary">Utilization</div><div class="fw-medium text-themed-primary">${data.util}%</div></div>
                      <div class="col-sm-4"><div class="small text-themed-secondary">PTO Balance</div><div class="fw-medium text-themed-primary">${data.pto} d</div></div>
                      <div class="col-sm-4"><div class="small text-themed-secondary">Band</div><div class="fw-medium text-themed-primary">${data.band}</div></div>
                    </div>
                  </div>
                </div>
              </div>`;
            modal('empQuickView').show();
          }));
        })();
    </script>
}
