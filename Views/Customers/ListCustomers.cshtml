@section Scripts {
    <script>
        (function () {
          const qEl   = document.getElementById('qCustomers');
          const stEl  = document.getElementById('statusCustomers');
          const segEl = document.getElementById('segmentCustomers');
          const regEl = document.getElementById('regionCustomers');
          const ltvEl = document.getElementById('ltvCustomers');
          const actEl = document.getElementById('activityCustomers');
          const tbody = document.getElementById('customersTbody');

          function withinLtv(filter, value) {
            const n = Number(value) || 0;
            switch (filter) {
              case '<1k':      return n < 1000;
              case '1k-10k':   return n >= 1000 && n < 10000;
              case '10k-50k':  return n >= 10000 && n < 50000;
              case '50k+':     return n >= 50000;
              default:         return true;
            }
          }

          function withinActivity(daysFilter, lastISO) {
            if (!daysFilter) return true;
            const last = Date.parse(lastISO);
            if (isNaN(last)) return false;
            const now = Date.now();
            const diffDays = (now - last) / (1000 * 60 * 60 * 24);
            return diffDays <= Number(daysFilter);
          }

          function apply() {
            const q   = (qEl.value || '').toLowerCase();
            const st  = stEl.value;
            const seg = segEl.value;
            const reg = regEl.value;
            const ltv = ltvEl.value;
            const act = actEl.value;

            tbody.querySelectorAll('tr').forEach(tr => {
              const cells = tr.cells;
              const hay = (cells[1].innerText + ' ' + cells[2].innerText + ' ' + cells[3].innerText).toLowerCase(); // name + company + email
              const status  = tr.dataset.status || '';
              const segment = tr.dataset.segment || '';
              const region  = tr.dataset.region || '';
              const ltvNum  = tr.dataset.ltv || '0';
              const lastISO = tr.dataset.last || '';

              let keep = hay.includes(q);
              if (st  && status !== st) keep = false;
              if (seg && segment !== seg) keep = false;
              if (reg && region  !== reg) keep = false;
              if (!withinLtv(ltv, ltvNum)) keep = false;
              if (!withinActivity(act, lastISO)) keep = false;

              tr.style.display = keep ? '' : 'none';
            });
          }

          // Buttons
          const btnApply = document.getElementById('btnApplyCustomers');
          const btnClear = document.getElementById('btnClearCustomers');
          if (btnApply) btnApply.addEventListener('click', apply);
          if (btnClear) btnClear.addEventListener('click', () => {
            qEl.value=''; stEl.value=''; segEl.value=''; regEl.value=''; ltvEl.value=''; actEl.value=''; apply();
          });
          // Enter to apply
          if (qEl) qEl.addEventListener('keydown', e => { if (e.key === 'Enter') { e.preventDefault(); apply(); } });

          // Quick filter buttons
          const bAll = document.getElementById('btnCustAll');
          const bAct = document.getElementById('btnCustActive');
          const bRisk= document.getElementById('btnCustRisk');
          function setActive(btn){ [bAll,bAct,bRisk].forEach(x=>x&&x.classList.remove('active')); btn.classList.add('active'); }
          if (bAll)  bAll.addEventListener('click', ()=>{ setActive(bAll);  tbody.querySelectorAll('tr').forEach(tr=> tr.style.display=''); });
          if (bAct)  bAct.addEventListener('click', ()=>{ setActive(bAct);  tbody.querySelectorAll('tr').forEach(tr=> tr.style.display = (tr.dataset.status==='Active')?'':'' ); });
          if (bRisk) bRisk.addEventListener('click',()=>{ setActive(bRisk); tbody.querySelectorAll('tr').forEach(tr=> tr.style.display = (tr.dataset.status==='At Risk')?'':'' ); });

          // Select All
          const selectAll = document.getElementById('selectAllCustomers');
          if (selectAll) {
            selectAll.addEventListener('change', () => {
              document.querySelectorAll('#customersTbody input[type="checkbox"]').forEach(cb => cb.checked = selectAll.checked);
            });
          }
        })();
    </script>
