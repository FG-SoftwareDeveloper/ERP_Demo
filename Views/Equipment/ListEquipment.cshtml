@{
    Layout = "_Layout";
    // Example data for static design; replace with your model in production
    var equipment = new[] {
        new { EquipmentID = 1, Name = "Excavator", Type = "Heavy", Status = "Active", Location = "Site A", LastService = DateTime.Parse("2025-08-10"), UsageHours = 1200, Condition = "Good", AIInsights = "Optimal utilization" },
        new { EquipmentID = 2, Name = "Forklift", Type = "Medium", Status = "Maintenance", Location = "Warehouse", LastService = DateTime.Parse("2025-08-20"), UsageHours = 800, Condition = "Needs Service", AIInsights = "Service recommended soon" },
        new { EquipmentID = 3, Name = "Generator", Type = "Light", Status = "Inactive", Location = "Site B", LastService = DateTime.Parse("2025-07-15"), UsageHours = 300, Condition = "Fair", AIInsights = "Low usage, consider redeployment" }
    };
}

<h2 class="h1 fw-bold themed-heading mb-4 border-bottom pb-2">Equipment</h2>

<!-- KPI Cards Row -->
<div class="row g-4 mb-4">
    <div class="col-md-3">
        <div class="card shadow-sm border-0 h-100">
            <div class="card-body">
                <div class="d-flex align-items-center mb-2">
                    <span class="me-2 fs-3 text-primary"><i class="bi bi-tools"></i></span>
                    <h5 class="card-title mb-0">Total Equipment</h5>
                </div>
                <div class="display-5 fw-bold text-primary mb-1">@equipment.Length</div>
                <div class="text-muted">Active: @equipment.Count(e => e.Status == "Active")</div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card shadow-sm border-0 h-100">
            <div class="card-body">
                <div class="d-flex align-items-center mb-2">
                    <span class="me-2 fs-3 text-success"><i class="bi bi-check2-circle"></i></span>
                    <h5 class="card-title mb-0">In Service</h5>
                </div>
                <div class="display-5 fw-bold text-success mb-1">@equipment.Count(e => e.Status == "Maintenance")</div>
                <div class="text-muted">Last 30 days: @equipment.Count(e => e.LastService > DateTime.Now.AddDays(-30))</div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card shadow-sm border-0 h-100">
            <div class="card-body">
                <div class="d-flex align-items-center mb-2">
                    <span class="me-2 fs-3 text-warning"><i class="bi bi-exclamation-triangle"></i></span>
                    <h5 class="card-title mb-0">Inactive</h5>
                </div>
                <div class="display-5 fw-bold text-warning mb-1">@equipment.Count(e => e.Status == "Inactive")</div>
                <div class="text-muted">Condition: @equipment.Count(e => e.Condition == "Fair" || e.Condition == "Needs Service")</div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card shadow-sm border-0 h-100">
            <div class="card-body">
                <div class="d-flex align-items-center mb-2">
                    <span class="me-2 fs-3 text-info"><i class="bi bi-geo-alt"></i></span>
                    <h5 class="card-title mb-0">Locations</h5>
                </div>
                <div class="display-5 fw-bold text-info mb-1">@equipment.Select(e => e.Location).Distinct().Count()</div>
                <div class="text-muted">Types: @equipment.Select(e => e.Type).Distinct().Count()</div>
            </div>
        </div>
    </div>
</div>

<!-- AI Forecast Widget (High Contrast) -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card shadow-lg border-0" style="background: linear-gradient(90deg,#e3e6f0 0%,#f8fafc 100%);">
            <div class="card-body p-4">
                <div class="d-flex flex-column flex-md-row align-items-md-center justify-content-between">
                    <div>
                        <h5 class="mb-2 text-dark"><i class="bi bi-lightbulb me-2"></i>AI Forecast: Next Month Maintenance Needs</h5>
                        <div class="fs-2 fw-bold text-dark">2 units</div>
                        <div class="small text-dark">Based on usage hours, last service, and condition. Predictive analytics suggest scheduling maintenance for Forklift and Generator.</div>
                    </div>
                    <div class="mt-3 mt-md-0">
                        <span class="badge rounded-pill bg-primary bg-opacity-10 text-primary fs-6 px-4 py-2 shadow-sm">Optimal Utilization: 1</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- BI Chart Placeholder -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-white">
                <h5 class="mb-0">Equipment Usage Trend (BI Chart)</h5>
            </div>
            <div class="card-body text-center">
                <img src="https://via.placeholder.com/600x200?text=Equipment+Usage+Trend+Chart" alt="Equipment Usage Trend Chart" class="img-fluid rounded" />
            </div>
        </div>
    </div>
</div>

<!-- Equipment Table -->
<div class="row">
    <div class="col-12">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-white">
                <h5 class="mb-0">Equipment List</h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>#</th>
                                <th>Name</th>
                                <th>Type</th>
                                <th>Status</th>
                                <th>Location</th>
                                <th>Last Service</th>
                                <th>Usage Hours</th>
                                <th>Condition</th>
                                <th>AI Insights</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var e in equipment)
                            {
                                <tr>
                                    <td>@e.EquipmentID</td>
                                    <td class="fw-semibold">@e.Name</td>
                                    <td>@e.Type</td>
                                    <td>
                                        @if (e.Status == "Active")
                                        {
                                            <span class="badge bg-success">Active</span>
                                        }
                                        else if (e.Status == "Maintenance")
                                        {
                                            <span class="badge bg-warning text-dark">Maintenance</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Inactive</span>
                                        }
                                    </td>
                                    <td>@e.Location</td>
                                    <td>@e.LastService.ToString("yyyy-MM-dd")</td>
                                    <td>@e.UsageHours</td>
                                    <td>
                                        @if (e.Condition == "Good")
                                        {
                                            <span class="text-success">Good</span>
                                        }
                                        else if (e.Condition == "Needs Service")
                                        {
                                            <span class="text-danger">Needs Service</span>
                                        }
                                        else
                                        {
                                            <span class="text-warning">Fair</span>
                                        }
                                    </td>
                                    <td>
                                        @if (e.AIInsights.Contains("Optimal"))
                                        {
                                            <span class="text-success">@e.AIInsights</span>
                                        }
                                        else if (e.AIInsights.Contains("Service"))
                                        {
                                            <span class="text-danger">@e.AIInsights</span>
                                        }
                                        else
                                        {
                                            <span class="text-primary">@e.AIInsights</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>