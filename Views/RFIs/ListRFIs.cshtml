@{
    Layout = "_Layout";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="card glass-effect border-0">
                <div class="card-body p-4 d-flex align-items-start justify-content-between">
                    <div><h1 class="mb-1 text-themed-primary d-flex align-items-center"><i class="bi bi-question-circle me-3 icon-primary fs-2"></i> RFIs</h1><p class="text-themed-secondary mb-0">Threaded RFIs with SLA timers and AI summarizer.</p></div>
                    <div class="d-flex gap-2"><button class="btn btn-themed"><i class="bi bi-plus-circle me-2"></i>New RFI</button><button class="btn btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#aiSummary"><i class="bi bi-robot me-2"></i>Summarize</button></div>
                </div>
            </div>
        </div>
    </div>

    <!-- Signature: Thread view -->
    <div class="row g-4">
        <div class="col-xxl-5">
            <div class="card glass-effect border-0 h-100">
                <div class="card-header p-4 bg-transparent border-0"><h5 class="mb-0 text-themed-primary"><i class="bi bi-threads me-2 icon-info"></i>Open Threads</h5></div>
                <div class="card-body p-0">
                    <div class="list-group list-group-flush">
                        <a class="list-group-item bg-transparent d-flex justify-content-between">
                            <div><strong>RFI-104</strong><div class="small">Beam detail at grid C-7</div></div>
                            <span class="badge bg-warning text-warning badge-themed">8h left</span>
                        </a>
                        <a class="list-group-item bg-transparent d-flex justify-content-between">
                            <div><strong>RFI-105</strong><div class="small">Finish schedule clarification</div></div>
                            <span class="badge bg-danger text-danger badge-themed">Overdue</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xxl-7">
            <div class="card glass-effect border-0 h-100">
                <div class="card-header p-4 bg-transparent border-0 d-flex justify-content-between"><h5 class="mb-0 text-themed-primary"><i class="bi bi-chat-dots me-2 icon-success"></i>Conversation</h5><button class="btn btn-outline-secondary btn-sm"><i class="bi bi-attach"></i> Attach</button></div>
                <div class="card-body">
                    <div class="border rounded p-3 mb-3 small">[Thread content]</div>
                    <textarea class="form-control focus-ring" rows="3" placeholder="Reply..."></textarea>
                    <div class="d-flex justify-content-end mt-2"><button class="btn btn-themed"><i class="bi bi-send me-1"></i>Send</button></div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal: AI Summary -->
<div class="modal fade" id="aiSummary" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content glass-effect border-0">
            <div class="modal-header"><h5 class="modal-title"><i class="bi bi-robot me-2"></i>AI RFI Summary</h5><button class="btn-close" data-bs-dismiss="modal"></button></div>
            <div class="modal-body">
                <p class="mb-1"><strong>Summary:</strong> Two RFIs require structural engineer confirmation (C-7 beam detail) and finish spec clarification.</p>
                <p class="mb-0"><strong>Next:</strong> Request drawing SK-21, confirm paint system P3.</p>
            </div>
            <div class="modal-footer"><button class="btn btn-themed-secondary"><i class="bi bi-file-earmark-text me-1"></i>Add to Daily Log</button></div>
        </div>
    </div>
</div>
