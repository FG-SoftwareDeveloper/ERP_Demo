@{
    Layout = "_Layout";
    // Example data for static design; replace with your model in production
    var invoices = new[] {
        new { ARInvoiceID = 1, Customer = "Acme Corp", InvoiceNumber = "AR-2025-001", InvoiceDate = DateTime.Parse("2025-08-28"), Amount = 15000m, Status = "Open" },
        new { ARInvoiceID = 2, Customer = "Global Paper", InvoiceNumber = "AR-2025-002", InvoiceDate = DateTime.Parse("2025-08-25"), Amount = 12000m, Status = "Paid" },
        new { ARInvoiceID = 3, Customer = "TechSource", InvoiceNumber = "AR-2025-003", InvoiceDate = DateTime.Parse("2025-08-20"), Amount = 8000m, Status = "Overdue" }
    };
}

<h2 class="h1 fw-bold themed-heading mb-4 border-bottom pb-2">AR Invoices</h2>

<!-- KPI Cards Row -->
<div class="row g-4 mb-4">
    <div class="col-md-4">
        <div class="card shadow-sm border-0 h-100">
            <div class="card-body">
                <div class="d-flex align-items-center mb-2">
                    <span class="me-2 fs-3 text-primary"><i class="bi bi-file-earmark-spreadsheet"></i></span>
                    <h5 class="card-title mb-0">Total Invoices</h5>
                </div>
                <div class="display-5 fw-bold text-primary mb-1">@invoices.Length</div>
                <div class="text-muted">Open: @invoices.Count(i => i.Status == "Open"), Paid: @invoices.Count(i => i.Status == "Paid")</div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card shadow-sm border-0 h-100">
            <div class="card-body">
                <div class="d-flex align-items-center mb-2">
                    <span class="me-2 fs-3 text-success"><i class="bi bi-currency-dollar"></i></span>
                    <h5 class="card-title mb-0">Total Amount</h5>
                </div>
                <div class="display-5 fw-bold text-success mb-1">@invoices.Sum(i => i.Amount).ToString("C")</div>
                <div class="text-muted">Overdue: @invoices.Where(i => i.Status == "Overdue").Sum(i => i.Amount).ToString("C")</div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card shadow-sm border-0 h-100">
            <div class="card-body">
                <div class="d-flex align-items-center mb-2">
                    <span class="me-2 fs-3 text-warning"><i class="bi bi-clock-history"></i></span>
                    <h5 class="card-title mb-0">Avg. Days to Pay</h5>
                </div>
                <div class="display-5 fw-bold text-warning mb-1">28</div>
                <div class="text-muted">Last Month: 26</div>
            </div>
        </div>
    </div>
</div>

<!-- AI Forecast Widget (High Contrast) -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card shadow-lg border-0" style="background: linear-gradient(90deg,#e3e6f0 0%,#f8fafc 100%);">
            <div class="card-body p-4">
                <div class="d-flex flex-column flex-md-row align-items-md-center justify-content-between">
                    <div>
                        <h5 class="mb-2 text-dark"><i class="bi bi-graph-up-arrow me-2"></i>AI Forecast: Next Month AR Inflow</h5>
                        <div class="fs-2 fw-bold text-dark">$41,000</div>
                        <div class="small text-dark">Based on historical payment patterns and predictive analytics.</div>
                    </div>
                    <div class="mt-3 mt-md-0">
                        <span class="badge rounded-pill bg-primary bg-opacity-10 text-primary fs-6 px-4 py-2 shadow-sm">Expected Overdue: $8,000</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- BI Chart Placeholder -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-white">
                <h5 class="mb-0">AR Invoice Trend (BI Chart)</h5>
            </div>
            <div class="card-body text-center">
                <img src="https://via.placeholder.com/600x200?text=AR+Invoice+Trend+Chart" alt="AR Invoice Trend Chart" class="img-fluid rounded" />
            </div>
        </div>
    </div>
</div>

<!-- AR Invoices Table -->
<div class="row">
    <div class="col-12">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-white">
                <h5 class="mb-0">AR Invoices List</h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>#</th>
                                <th>Customer</th>
                                <th>Invoice #</th>
                                <th>Date</th>
                                <th class="text-end">Amount</th>
                                <th>Status</th>
                                <th>AI Insights</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var i in invoices)
                            {
                                <tr>
                                    <td>@i.ARInvoiceID</td>
                                    <td class="fw-semibold">@i.Customer</td>
                                    <td>@i.InvoiceNumber</td>
                                    <td>@i.InvoiceDate.ToString("yyyy-MM-dd")</td>
                                    <td class="text-end">@i.Amount.ToString("C")</td>
                                    <td>
                                        @switch (i.Status)
                                        {
                                            case "Paid":
                                                <span class="badge bg-success">Paid</span>
                                                ; break;
                                            case "Overdue":
                                                <span class="badge bg-danger">Overdue</span>
                                                ; break;
                                            default:
                                                <span class="badge bg-warning text-dark">Open</span>
                                                ; break;
                                        }
                                    </td>
                                    <td>
                                        @if (i.Status == "Overdue")
                                        {
                                            <span class="text-danger">Escalate Collection</span>
                                        }
                                        else if (i.Status == "Paid")
                                        {
                                            <span class="text-success">On Time</span>
                                        }
                                        else
                                        {
                                            <span class="text-warning">Likely Overdue</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>