    <script>
        (function () {
          const qEl = document.getElementById('qAR');
          const statusEl = document.getElementById('statusAR');
          const agingEl = document.getElementById('agingAR');
          const segEl = document.getElementById('segmentAR');
          const tbody = document.getElementById('arTbody');

          function apply() {
            const q = (qEl.value || '').toLowerCase();
            const st = statusEl.value;
            const ag = agingEl.value;    // '', 'current', '30', '60', '90+'
            const seg = segEl.value;

            tbody.querySelectorAll('tr').forEach(tr => {
              const hay = (tr.cells[1].innerText + ' ' + tr.cells[2].innerText).toLowerCase(); // inv + customer
              const status = tr.dataset.status || '';
              const aging = tr.dataset.aging || '';
              const segment = tr.dataset.segment || '';

              let keep = hay.includes(q);
              if (st && status !== st) keep = false;
              if (seg && segment !== seg) keep = false;
              if (ag && aging !== ag) keep = false;

              tr.style.display = keep ? '' : 'none';
            });
          }

          const btnApply = document.getElementById('btnApplyAR');
          const btnClear = document.getElementById('btnClearAR');
          if (btnApply) btnApply.addEventListener('click', apply);
          if (btnClear) btnClear.addEventListener('click', () => {
            qEl.value = ''; statusEl.value = ''; agingEl.value = ''; segEl.value = ''; apply();
          });

          // Select All
          const selectAll = document.getElementById('selectAllAR');
          if (selectAll) {
            selectAll.addEventListener('change', () => {
              document.querySelectorAll('#arTbody input[type="checkbox"]').forEach(cb => cb.checked = selectAll.checked);
            });
          }
        })();
    </script>
}
