@{
    Layout = "_Layout";
    // Example data for static design; replace with your model in production
    var journalEntries = new[] {
        new { EntryID = 1, Date = DateTime.Parse("2025-08-31"), Account = "Cash", Type = "Debit", Amount = 12000m, Reference = "INV-2025-001", Status = "Posted", AIInsights = "Consistent with cash flow trends." },
        new { EntryID = 2, Date = DateTime.Parse("2025-08-30"), Account = "Accounts Payable", Type = "Credit", Amount = 8000m, Reference = "BILL-2025-002", Status = "Pending", AIInsights = "Pending approval, matches vendor invoice." },
        new { EntryID = 3, Date = DateTime.Parse("2025-08-29"), Account = "Revenue", Type = "Credit", Amount = 15000m, Reference = "REC-2025-003", Status = "Posted", AIInsights = "Above average for period, flagged for review." }
    };
}

<h2 class="h1 fw-bold themed-heading mb-4 border-bottom pb-2">Journal Entries</h2>

<!-- KPI Cards Row -->
<div class="row g-4 mb-4">
    <div class="col-md-3">
        <div class="card shadow-sm border-0 h-100">
            <div class="card-body">
                <div class="d-flex align-items-center mb-2">
                    <span class="me-2 fs-3 text-primary"><i class="bi bi-journal-text"></i></span>
                    <h5 class="card-title mb-0">Total Entries</h5>
                </div>
                <div class="display-5 fw-bold text-primary mb-1">@journalEntries.Length</div>
                <div class="text-muted">Posted: @journalEntries.Count(e => e.Status == "Posted")</div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card shadow-sm border-0 h-100">
            <div class="card-body">
                <div class="d-flex align-items-center mb-2">
                    <span class="me-2 fs-3 text-success"><i class="bi bi-currency-dollar"></i></span>
                    <h5 class="card-title mb-0">Total Debits</h5>
                </div>
                <div class="display-5 fw-bold text-success mb-1">@journalEntries.Where(e => e.Type == "Debit").Sum(e => e.Amount).ToString("C")</div>
                <div class="text-muted">Last: @journalEntries.Where(e => e.Type == "Debit").OrderByDescending(e => e.Date).FirstOrDefault()?.Amount.ToString("C")</div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card shadow-sm border-0 h-100">
            <div class="card-body">
                <div class="d-flex align-items-center mb-2">
                    <span class="me-2 fs-3 text-danger"><i class="bi bi-cash-stack"></i></span>
                    <h5 class="card-title mb-0">Total Credits</h5>
                </div>
                <div class="display-5 fw-bold text-danger mb-1">@journalEntries.Where(e => e.Type == "Credit").Sum(e => e.Amount).ToString("C")</div>
                <div class="text-muted">Last: @journalEntries.Where(e => e.Type == "Credit").OrderByDescending(e => e.Date).FirstOrDefault()?.Amount.ToString("C")</div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card shadow-sm border-0 h-100">
            <div class="card-body">
                <div class="d-flex align-items-center mb-2">
                    <span class="me-2 fs-3 text-info"><i class="bi bi-flag"></i></span>
                    <h5 class="card-title mb-0">Pending Entries</h5>
                </div>
                <div class="display-5 fw-bold text-info mb-1">@journalEntries.Count(e => e.Status == "Pending")</div>
                <div class="text-muted">Last Ref: @journalEntries.Where(e => e.Status == "Pending").OrderByDescending(e => e.Date).FirstOrDefault()?.Reference</div>
            </div>
        </div>
    </div>
</div>

<!-- AI Forecast Widget (High Contrast) -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card shadow-lg border-0" style="background: linear-gradient(90deg,#e3e6f0 0%,#f8fafc 100%);">
            <div class="card-body p-4">
                <div class="d-flex flex-column flex-md-row align-items-md-center justify-content-between">
                    <div>
                        <h5 class="mb-2 text-dark"><i class="bi bi-lightbulb me-2"></i>AI Forecast: Next Month Journal Volume</h5>
                        <div class="fs-2 fw-bold text-dark">+12 entries</div>
                        <div class="small text-dark">Based on historical posting rates, transaction volume, and seasonal trends.</div>
                    </div>
                    <div class="mt-3 mt-md-0">
                        <span class="badge rounded-pill bg-primary bg-opacity-10 text-primary fs-6 px-4 py-2 shadow-sm">Projected Debits: $150,000</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- BI Chart Placeholder -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-white">
                <h5 class="mb-0">Journal Entry Trend (BI Chart)</h5>
            </div>
            <div class="card-body text-center">
                <img src="https://via.placeholder.com/600x200?text=Journal+Entry+Trend+Chart" alt="Journal Entry Trend Chart" class="img-fluid rounded" />
            </div>
        </div>
    </div>
</div>

<!-- Journal Entries Table -->
<div class="row">
    <div class="col-12">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-white">
                <h5 class="mb-0">Journal Entries List</h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>#</th>
                                <th>Date</th>
                                <th>Account</th>
                                <th>Type</th>
                                <th>Amount</th>
                                <th>Reference</th>
                                <th>Status</th>
                                <th>AI Insights</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var e in journalEntries.OrderByDescending(e => e.Date))
                            {
                                <tr>
                                    <td>@e.EntryID</td>
                                    <td class="fw-semibold">@e.Date.ToString("yyyy-MM-dd")</td>
                                    <td>@e.Account</td>
                                    <td>
                                        @if (e.Type == "Debit")
                                        {
                                            <span class="badge bg-success">Debit</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Credit</span>
                                        }
                                    </td>
                                    <td>@e.Amount.ToString("C")</td>
                                    <td>@e.Reference</td>
                                    <td>
                                        @if (e.Status == "Posted")
                                        {
                                            <span class="badge bg-success">Posted</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning text-dark">Pending</span>
                                        }
                                    </td>
                                    <td>
                                        @if (e.AIInsights.Contains("flagged"))
                                        {
                                            <span class="text-warning">@e.AIInsights</span>
                                        }
                                        else if (e.AIInsights.Contains("Consistent"))
                                        {
                                            <span class="text-success">@e.AIInsights</span>
                                        }
                                        else
                                        {
                                            <span class="text-primary">@e.AIInsights</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>