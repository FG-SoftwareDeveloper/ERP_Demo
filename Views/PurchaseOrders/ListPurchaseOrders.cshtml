<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="card glass-effect border-0">
                <div class="card-body p-4 d-flex align-items-start justify-content-between">
                    <div><h1 class="mb-1 text-themed-primary d-flex align-items-center"><i class="bi bi-cart-check me-3 icon-primary fs-2"></i> Purchase Orders</h1><p class="text-themed-secondary mb-0">Pipeline funnel, aging buckets, and AI renegotiation.</p></div>
                    <div class="d-flex gap-2"><button class="btn btn-themed-secondary" data-bs-toggle="modal" data-bs-target="#aiRenegotiate"><i class="bi bi-robot me-2"></i>Renegotiate</button></div>
                </div>
            </div>
        </div>
    </div>

    <!-- Signature: Funnel + Aging Donut -->
    <div class="row g-4 mb-4">
        <div class="col-xxl-6">
            <div class="card glass-effect border-0 h-100">
                <div class="card-header p-4 bg-transparent border-0"><h5 class="mb-0 text-themed-primary"><i class="bi bi-funnel me-2 icon-info"></i>PO Pipeline</h5></div>
                <div class="card-body p-4"><div class="chart-container"><canvas id="poFunnel"></canvas></div></div>
            </div>
        </div>
        <div class="col-xxl-6">
            <div class="card glass-effect border-0 h-100">
                <div class="card-header p-4 bg-transparent border-0"><h5 class="mb-0 text-themed-primary"><i class="bi bi-pie-chart me-2 icon-warning"></i>Aging Buckets</h5></div>
                <div class="card-body p-4"><div class="chart-container"><canvas id="agingDonut"></canvas></div></div>
            </div>
        </div>
    </div>

    <!-- Table -->
    <div class="row">
        <div class="col-12">
            <div class="card themed-table border-0">
                <div class="card-header p-4 bg-transparent border-0"><h5 class="mb-0 text-themed-primary"><i class="bi bi-table me-2 icon-primary"></i>PO List</h5></div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead><tr><th>PO #</th><th>Date</th><th>Supplier</th><th>Lines</th><th>Ordered</th><th>Received</th><th>Amount</th><th>Status</th><th>Actions</th></tr></thead>
