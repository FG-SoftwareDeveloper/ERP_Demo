@{
    Layout = "_Layout";
    // Example data for static design; replace with your model in production
    var purchaseOrders = new[] {
        new { PurchaseOrderID = 1, Vendor = "Acme Supplies", Status = "Approved", Total = 12000m, Date = DateTime.Parse("2025-08-28"), Items = 5, ExpectedDelivery = DateTime.Parse("2025-09-05"), AIInsights = "On time, all items validated." },
        new { PurchaseOrderID = 2, Vendor = "Global Paper", Status = "Pending", Total = 8000m, Date = DateTime.Parse("2025-08-30"), Items = 3, ExpectedDelivery = DateTime.Parse("2025-09-10"), AIInsights = "Pending approval, flagged for review." },
        new { PurchaseOrderID = 3, Vendor = "TechSource", Status = "Delayed", Total = 15000m, Date = DateTime.Parse("2025-08-25"), Items = 7, ExpectedDelivery = DateTime.Parse("2025-09-15"), AIInsights = "Delivery delayed, vendor notified." }
    };
}

<h2 class="h1 fw-bold themed-heading mb-4 border-bottom pb-2">Purchase Orders</h2>

<!-- KPI Cards Row -->
<div class="row g-4 mb-4">
    <div class="col-md-3">
        <div class="card shadow-sm border-0 h-100">
            <div class="card-body">
                <div class="d-flex align-items-center mb-2">
                    <span class="me-2 fs-3 text-primary"><i class="bi bi-file-earmark-spreadsheet"></i></span>
                    <h5 class="card-title mb-0">Total Orders</h5>
                </div>
                <div class="display-5 fw-bold text-primary mb-1">@purchaseOrders.Length</div>
                <div class="text-muted">Approved: @purchaseOrders.Count(po => po.Status == "Approved")</div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card shadow-sm border-0 h-100">
            <div class="card-body">
                <div class="d-flex align-items-center mb-2">
                    <span class="me-2 fs-3 text-success"><i class="bi bi-currency-dollar"></i></span>
                    <h5 class="card-title mb-0">Total Value</h5>
                </div>
                <div class="display-5 fw-bold text-success mb-1">@purchaseOrders.Sum(po => po.Total).ToString("C")</div>
                <div class="text-muted">Pending: @purchaseOrders.Count(po => po.Status == "Pending")</div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card shadow-sm border-0 h-100">
            <div class="card-body">
                <div class="d-flex align-items-center mb-2">
                    <span class="me-2 fs-3 text-warning"><i class="bi bi-exclamation-triangle"></i></span>
                    <h5 class="card-title mb-0">Delayed Orders</h5>
                </div>
                <div class="display-5 fw-bold text-warning mb-1">@purchaseOrders.Count(po => po.Status == "Delayed")</div>
                <div class="text-muted">Avg. Items: @(purchaseOrders.Average(po => po.Items).ToString("F1"))</div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card shadow-sm border-0 h-100">
            <div class="card-body">
                <div class="d-flex align-items-center mb-2">
                    <span class="me-2 fs-3 text-info"><i class="bi bi-truck"></i></span>
                    <h5 class="card-title mb-0">Upcoming Deliveries</h5>
                </div>
                <div class="display-5 fw-bold text-info mb-1">@purchaseOrders.Count(po => po.ExpectedDelivery > DateTime.Now)</div>
                <div class="text-muted">Vendors: @purchaseOrders.Select(po => po.Vendor).Distinct().Count()</div>
            </div>
        </div>
    </div>
</div>

<!-- AI Forecast Widget (High Contrast) -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card shadow-lg border-0" style="background: linear-gradient(90deg,#e3e6f0 0%,#f8fafc 100%);">
            <div class="card-body p-4">
                <div class="d-flex flex-column flex-md-row align-items-md-center justify-content-between">
                    <div>
                        <h5 class="mb-2 text-dark"><i class="bi bi-lightbulb me-2"></i>AI Forecast: Next Month PO Volume</h5>
                        <div class="fs-2 fw-bold text-dark">+10 orders</div>
                        <div class="small text-dark">Based on historical order rates, vendor cycles, and seasonal trends.</div>
                    </div>
                    <div class="mt-3 mt-md-0">
                        <span class="badge rounded-pill bg-primary bg-opacity-10 text-primary fs-6 px-4 py-2 shadow-sm">Projected Value: $120,000</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- BI Chart Placeholder -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-white">
                <h5 class="mb-0">Purchase Order Trend (BI Chart)</h5>
            </div>
            <div class="card-body text-center">
                <img src="https://via.placeholder.com/600x200?text=Purchase+Order+Trend+Chart" alt="Purchase Order Trend Chart" class="img-fluid rounded" />
            </div>
        </div>
    </div>
</div>

<!-- Purchase Orders Table -->
<div class="row">
    <div class="col-12">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-white">
                <h5 class="mb-0">Purchase Orders List</h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>#</th>
                                <th>Vendor</th>
                                <th>Status</th>
                                <th>Total</th>
                                <th>Date</th>
                                <th>Items</th>
                                <th>Expected Delivery</th>
                                <th>AI Insights</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var po in purchaseOrders.OrderByDescending(po => po.Date))
                            {
                                <tr>
                                    <td>@po.PurchaseOrderID</td>
                                    <td class="fw-semibold">@po.Vendor</td>
                                    <td>
                                        @if (po.Status == "Approved")
                                        {
                                            <span class="badge bg-success">Approved</span>
                                        }
                                        else if (po.Status == "Pending")
                                        {
                                            <span class="badge bg-warning text-dark">Pending</span>
                                        }
                                        else if (po.Status == "Delayed")
                                        {
                                            <span class="badge bg-danger">Delayed</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">@po.Status</span>
                                        }
                                    </td>
                                    <td>@po.Total.ToString("C")</td>
                                    <td>@po.Date.ToString("yyyy-MM-dd")</td>
                                    <td>@po.Items</td>
                                    <td>
                                        @if (po.ExpectedDelivery < DateTime.Now)
                                        {
                                            <span class="text-danger">@po.ExpectedDelivery.ToString("yyyy-MM-dd")</span>
                                        }
                                        else
                                        {
                                            <span class="text-primary">@po.ExpectedDelivery.ToString("yyyy-MM-dd")</span>
                                        }
                                    </td>
                                    <td>
                                        @if (po.AIInsights.Contains("delayed"))
                                        {
                                            <span class="text-danger">@po.AIInsights</span>
                                        }
                                        else if (po.AIInsights.Contains("flagged"))
                                        {
                                            <span class="text-warning">@po.AIInsights</span>
                                        }
                                        else if (po.AIInsights.Contains("validated") || po.AIInsights.Contains("on time"))
                                        {
                                            <span class="text-success">@po.AIInsights</span>
                                        }
                                        else
                                        {
                                            <span class="text-primary">@po.AIInsights</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>